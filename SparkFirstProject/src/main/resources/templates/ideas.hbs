{{#block "content"}}
    <div class="page">
    <h1>Current Ideas</h1>
    <ul>
        {{#each ideas}}
            <li>
                <form action="/ideas/{{slug}}/vote" method="post">
                    {{title}} ({{voteCount}} votes) <button>vote</button>
                </form>

            </li>
        {{/each}}
    </ul>
    <form action="/ideas" method="post">
        <input type="text" placeholder="What's your ideas?" name="title">
        <button>Suggest!</button>
    </form>
    </div>
{{/block}}

{{>base.hbs}}